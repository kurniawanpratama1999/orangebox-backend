generator client {
  provider = "prisma-client"
  output   = "../src/orm/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model users {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  password String @db.LongText

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
  tokens     tokens?
}

model tokens {
  id      String @id
  user_id Int    @unique
  token   String @db.LongText

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  user    users  @relation(fields: [user_id], references: [id])
}

model categories {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String     @db.LongText
  products    products[]
}

model products {
  id             Int     @id @default(autoincrement())
  category_id    Int
  photo          String  @db.LongText
  name           String  @unique
  description    String  @db.LongText
  price          Decimal

  is_favorite    Boolean @default(false)
  is_new         Boolean @default(false)

  created_at DateTime   @default(now())
  updated_at DateTime   @default(now()) @updatedAt

  category   categories @relation(fields: [category_id], references: [id])
}


model umkm_name {
  name        String @unique
  address     String @db.LongText
}

model sosmeds {
  id   Int @id @default(autoincrement())
  name String @unique
  description String
  link String @db.LongText

  more_cta more_cta?

  button_location1 location[] @relation("link1")
  button_location2 location[] @relation("link2")
}

model hero {
  headline String @unique
  photo String @db.LongText
  subheadline String
  description String @db.LongText
}

model favorite_menu {
  title String @unique
  information String
  max_show_product Int
}

model facility_and_place {
  title String @unique
  information String
}

model facilities_and_places {
  id Int @id @default(autoincrement())
  photo String @db.LongText
  name String
}

model more_cta {
  title String @unique
  button String
  link_id Int @unique

  sosmed sosmeds @relation(fields: [link_id], references: [id])
}

model testimoni {
  title String @unique
  information String
}

model testimonies {
  id Int @id @default(autoincrement())
  photo String? @db.LongText
  name String
  description String
}

model location {
  title String @unique
  photo String @db.LongText

  button1 String
  link1_id Int

  button2 String
  link2_id Int

  link1 sosmeds @relation("link1",fields: [link1_id], references: [id])
  link2 sosmeds @relation("link2",fields: [link2_id], references: [id])
}